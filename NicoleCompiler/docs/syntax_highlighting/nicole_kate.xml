<?xml version = "1.0" encoding = "UTF-8" ?>
<!DOCTYPE language SYSTEM "language.dtd">
<language
	name =       "Nicole"
	section =    "Sources"
	extensions = "*.ni"
	version =    "0.1.0"
	license =    "MIT">
	<highlighting>
		<list name = "keywords">
			<item> use </item>
			<item> procedure </item>
			<item> function </item>
			<item> string </item>
			<item> let </item>
			<item> label </item>
			<item> if </item>
			<item> then </item>
		</list>
		<list name = "functions">
			<item> c_string </item>
			<item> ArrayAppend </item>
			<item> ArrayCreate </item>
			<item> ArrayCreateFromNumber </item>
			<item> ArrayCreateFromString </item>
			<item> ArrayGetSize </item>
			<item> ArrayItemGet </item>
			<item> FileOpen </item>
			<item> FileRead </item>
			<item> FileReadAll </item>
			<item> GetOs </item>
			<item> MathAngle </item>
			<item> MathArccos </item>
			<item> MathArcsin </item>
			<item> MathArctg </item>
			<item> MathCos </item>
			<item> MathExponent </item>
			<item> MathInteger </item>
			<item> MathLg </item>
			<item> MathLn </item>
			<item> MathModulus </item>
			<item> MathPower </item>
			<item> MathRandom </item>
			<item> MathSin </item>
			<item> MathSquareRoot </item>
			<item> MathTg </item>
			<item> NumberAdd </item>
			<item> NumberAnd </item>
			<item> NumberDiv </item>
			<item> NumberEq </item>
			<item> NumberGt </item>
			<item> NumberLs </item>
			<item> NumberMul </item>
			<item> NumberNot </item>
			<item> NumberOr </item>
			<item> NumberSub </item>
			<item> TimerGetElapsedTimeInUs </item>
			<item> ToString </item>
			<item> ArrayClearMemoryAfterConvertsToStrings </item>
			<item> ArrayDelete </item>
			<item> ArrayDeleteAll </item>
			<item> ArrayItemAppend </item>
			<item> ArrayItemInsert </item>
			<item> ArrayItemRemove </item>
			<item> ArrayItemSet </item>
			<item> Exit </item>
			<item> FileClose </item>
			<item> FileCloseAll </item>
			<item> FileDelete </item>
			<item> FileWrite </item>
			<item> Show </item>
			<item> TimerStart </item>
		</list>
		<list name = "constants">
			<item> FALSE </item>
			<item> TRUE </item>
			<item> PI </item>
			<item> E </item>
			<item> FILE_OPEN_MODE_READ </item>
			<item> FILE_OPEN_MODE_APPEND </item>
			<item> FILE_OPEN_MODE_REWRITE </item>
			<item> OS_LINUX </item>
			<item> OS_WINDOWS </item>
			<item> APPLICATION_PATH </item>
			<item> NEW_LINE </item>
			<item> PATH_SEPARATOR </item>
		</list>
		<contexts>
			<context
				name =           "Normal"
				lineEndContext = "#stay"
				attribute =      "Normal Text">
				<keyword
					attribute = "Keyword"
					context =   "#stay"
					String =    "keywords" />
				<keyword
					attribute = "Function"
					context =   "#stay"
					String =    "functions" />
				<keyword
					attribute = "Constants"
					context =   "#stay"
					String =    "constants" />
				<RegExpr
					attribute = "Keyword"
					context =   "#stay"
					String =    "\bgo\s*to\b" />
				<Float attribute = "Data" context = "#stay" />
				<Int attribute = "Data" context = "#stay" />
				<DetectChar
					attribute = "String"
					context =   "String"
					char =      "&quot;" />
				<StringDetect
					attribute = "Comment"
					context =   "Comment"
					String =    "note" />
			</context>
			<context
				name =           "String"
				lineEndContext = "#pop"
				attribute =      "String">
				<DetectChar
					attribute = "String"
					context =   "#pop"
					char =      "&quot;" />
			</context>
			<context
				name =           "Comment"
				lineEndContext = "#pop"
				attribute =      "Comment">
				<DetectChar
					attribute = "Comment"
					context =   "#pop"
					char =      "\n" />
			</context>
		</contexts>
		<itemDatas>
			<itemData name = "Normal Text" defStyleNum = "dsNormal" />
			<itemData name = "Keyword" defStyleNum = "dsKeyword" />
			<itemData name = "Function" defStyleNum = "dsFunction" />
			<itemData name = "Constants" defStyleNum = "dsOthers" />
			<itemData name = "Data" defStyleNum = "dsFloat" />
			<itemData name = "String" defStyleNum = "dsString" />
			<itemData name = "Comment" defStyleNum = "dsComment" />
		</itemDatas>
	</highlighting>
	<general>
		<comments>
			<comment name = "singleLine" start = "note" />
		</comments>
		<keywords casesensitive = "1" />
	</general>
</language>
